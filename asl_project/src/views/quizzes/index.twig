{% extends 'layouts/_default.twig' %}

{% block main_content %}
    
    <div id="list"></div>
    <p>
        <a href="/quizzes/new">Create New Quiz</a>
    </p>
{% endblock %}

{% block reactjs %}
    <!-- Load React. -->
    <!-- Note: when deploying, replace "development.js" with "production.min.js". -->
    <script src="https://unpkg.com/react@17/umd/react.development.js" crossorigin></script>
    <script src="https://unpkg.com/react-dom@17/umd/react-dom.development.js" crossorigin></script>
    <script src="/views/list.js"></script>
    <script type="text/javascript">
        const domContainer = document.querySelector('div#list')
        ReactDOM.render(React.createElement(List, { model: 'quizzes' }), domContainer)
    </script>
{% endblock %}